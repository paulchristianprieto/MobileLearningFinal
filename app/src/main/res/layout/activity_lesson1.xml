<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson1">

    <TextView
        android:id="@+id/lessonOrQuizTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/highlife"
        android:text="Lesson 1: Fundamental Positions of the Arms and Feet"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lessonOrQuizTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Very expressive movements of the feet and arms characterize Philippine folk dances. These movements are a combination of the five fundamental positions of the arms and feet whether the pace of the dance steps is slow or fast.  \n\nArms Positions:" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic1"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First position- raise arms to a circle in front of the chest." />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second position – open up arms sideward, raised below shoulder level with a graceful curve." />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic3" />

            <TextView
                android:id="@+id/textView999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Third position – raise one arm overhead while other arm remains in 2nd position." />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fourth position – raise one arm in front of chest in a half circle, while one arm remains overhead." />

            <ImageView
                android:id="@+id/imageView8293"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic5" />

            <TextView
                android:id="@+id/textView6123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fifth position – raise both arms overhead in a graceful curve." />

            <TextView
                android:id="@+id/textView679"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feet Postions:" />

            <ImageView
                android:id="@+id/imageView41230"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic6" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First position – bring heels close to touch; toes apart." />

            <ImageView
                android:id="@+id/imageView4128"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic7" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second position – bring feet apart sideward." />

            <ImageView
                android:id="@+id/imageView4123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic8" />

            <TextView
                android:id="@+id/textView6456"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Third position – bring the heel of one foot to touch the instep of the other foot." />

            <ImageView
                android:id="@+id/imageView41245"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic9" />

            <TextView
                android:id="@+id/textView61235"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fourth position – bring one foot in front of the other foot to walk strike." />

            <ImageView
                android:id="@+id/imageView412"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic10" />

            <TextView
                android:id="@+id/textView61223"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fifth position – bring the heel of one foot to touch the toe of the other.\n\n\n\n\n\n" />

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/speakOrStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:onClick="TTS1"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorPrimary"
        app:srcCompat="@drawable/ic_volume_up" />


</android.support.constraint.ConstraintLayout>